@using Microsoft.AspNetCore.Components

<span class="status-item" title="@Title">
    <svg width="32" height="32" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
        <image width="32" height="32" href="data:image/png;base64," />
        @if (IsCompleted)
        {
            <path d="M 22 22 L 25 25 L 29 19" stroke="#32CD32" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" />
        }
        else if (IsOverdue)
        {
            <path d="M19 19 L25 25 M25 19 L19 25" stroke="#e66" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" />
        }
        else if (IsUnreachable)
        {
            <path d="M 26 16 L 20 26 L 32 26 Z" fill="#FFC107" stroke="#FFC107" stroke-width="2" stroke-linejoin="round" />
            @((MarkupString)"<text x=\"26\" y=\"22\" font-family=\"Arial, sans-serif\" font-size=\"7px\" fill=\"#000000\" text-anchor=\"middle\" alignment-baseline=\"middle\">!</text>")
        }
        else if (IsReachable)
        {
            <path d="M22 18 L25 21 L29 15" stroke="#FFA500" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" />
        }
    </svg>
</span>

@code {
    [Parameter] public bool IsCompleted { get; set; }
    [Parameter] public bool IsOverdue { get; set; }
    [Parameter] public bool IsUnreachable { get; set; }
    [Parameter] public bool IsReachable { get; set; }
    [Parameter] public string? Title { get; set; }
}
